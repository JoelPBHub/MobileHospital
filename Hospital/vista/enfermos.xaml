<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hospital.vista.enfermos">
    <ContentPage.Content>
        <StackLayout  BackgroundColor="WhiteSmoke" Spacing="50" >

            <Entry Placeholder="apellido" x:Name="txtapellido"/>
            <Entry Placeholder="direccion" x:Name="txtdireccion"/>
            <Entry Placeholder="fecha_nac" x:Name="txtfecha_nac"/>
            <Entry Placeholder="inscripcion" x:Name="txtinscripcion"/>

            <Button Text="guardar" x:Name="btnguarda"
                    Clicked="Btnguardar_clicked"
                    BorderColor="Black"
                    BackgroundColor="Aqua"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hospital.vista.ResumenHospital.View_1">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Image Source="https://i.ibb.co/Kr2MWRJ/View1.png"
               Grid.Row="0"
               Margin="8,0,8,0"/>
        <!--Encabezado-->
        <Label Text="Bienvenido" Grid.Row="1"
               HorizontalOptions="Center"
               FontAttributes="Bold"
               VerticalOptions="Center"
               FontSize="25"/>
        <!--Cuerpo de texto-->
        <Label Text="Aquí están las herramientas disponibles del hospital" Grid.Row="2"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               FontSize="18"/>



    </Grid>
    
    
</ContentView>